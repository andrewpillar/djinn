{% import "strings" %}

{% collapsespace %}
{% func renderPath(username, fullName string) %}
	{% code parts := strings.Split(fullName, "/") %}
	{% for i, p := range parts %}
		<a href="/n/{%s username %}/{%s strings.Join(parts[:i + 1], "/") %}">{%s p %}</a>
		{% if i != len(parts) - 1 %}<span> / </span>{% endif %}
	{% endfor %}
{% endfunc %}
{% endcollapsespace %}
