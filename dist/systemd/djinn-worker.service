

[Unit]
Description=Djinn CI Worker
After=network-online.target

[Service]
Type=simple
User=djinn-worker
Group=djinn
PIDFile=/run/djinn/worker.pid
ExecStart=/usr/bin/djinn-worker -config /etc/djinn/worker.toml -driver /etc/djinn/driver.toml
KillMode=mixed
KillSignal=SIGINT

[Install]
WantedBy=multi-user.target
